<h1><%= @director.name %></h1>

<div class="flex_box">
  <div class="image_box">
    <%= image_tag @director.image, :class => "show_image" %>
  </div>
  <div class="show_box">
    <li>Born: <%= @director.born %></li>
    <li>Nationality: <%= @director.nationality %></li>
    <div class="controls_director">
      <%= link_to "Edit Director", edit_director_path %>
      <%= link_to "Delete Director", @director, :method => 'delete', :data => {:confirm =>'Are you sure?'} %>
    </div>

  </div>
</div>
<br>
  <h3>Movies</h3>
<div class="movies_slide">

  <% @director.movies.each do |movie| %>
  <%= link_to image_tag(movie.image, :class =>'thumb'), movie %>
  <% end %>
</div>
